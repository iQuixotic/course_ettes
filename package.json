{
  "name": "course_ettes",
  "version": "1.0.0",
  "description": "the simplest, coolest notecard app",
  "main": "server.js",
  "scripts": {
    "start": "ts-node server.ts",
    "go": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "test": "mocha -r ts-node/register 'test/**/*.test.ts'",
    "coverage": "nyc npm run test"
  },
  "nyc": {
    "include": [
      "test/**/*.ts",
      "test/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iQuixotic/course_ettes.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iQuixotic/course_ettes/issues"
  },
  "homepage": "https://github.com/iQuixotic/course_ettes#readme",
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.31",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.15",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1"
  }
}
